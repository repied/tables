{
    "name": "Web Dev DevContainer",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "forwardPorts": [
        5500
    ],
    "customizations": {
        "vscode": {
            "settings": {
                "workbench.preferredDarkColorTheme": "Dracula Theme",
                "workbench.preferredLightColorTheme": "Dracula Theme"
            },
            "extensions": [
                "ms-playwright.playwright",
                "usernamehw.errorlens",
                "wayou.vscode-todo-highlight",
                "streetsidesoftware.code-spell-checker-french",
                "streetsidesoftware.code-spell-checker",
                "github.vscode-github-actions",
                "dracula-theme.theme-dracula",
                "github.copilot-chat"
            ]
        }
    },
    "remoteUser": "node",
    // "postCreateCommand": "git config commit.gpgsign false && npm install && npx playwright install"
    "postCreateCommand": "npm install && npx playwright install"
}
